- if line_item == @current_item
  %tr#current_item
    %td
      = line_item.quantity
      &times;
    %td
      = line_item.product.title
    %td.item_price
      = number_to_currency(line_item.total_price)
    %td
      = button_to "dec", decrement_quantity_line_item_path(line_item),
      remote: true, method: :post
    %td
      = button_to "delete line", line_item, method: :delete
- else
  %tr
    %td
      = line_item.quantity
      &times;
    %td
      = line_item.product.title
    %td.item_price
      = number_to_currency(line_item.total_price)
    %td
      = button_to "dec", decrement_quantity_line_item_path(line_item),
      remote: true, method: :post
    %td
      = button_to "delete line", line_item, method: :delete
